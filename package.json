{
  "name": "claude-code-preferences",
  "version": "1.0.0",
  "description": "Centralized Claude Code preferences, settings, and tools for syncing across devices and projects",
  "main": "install.sh",
  "scripts": {
    "setup": "./install.sh",
    "sync": "./scripts/project-sync.sh",
    "check-teams": "./scripts/check-ai-teams.sh",
    "monitor": "node scripts/enhanced-monitoring.js",
    "monitor:quick": "node scripts/enhanced-monitoring.js quick",
    "monitor:git": "node scripts/enhanced-monitoring.js git",
    "monitor:stuck": "node scripts/enhanced-monitoring.js stuck",
    "screenshot": "./scripts/take-screenshot.sh",
    "send-email": "./scripts/send-email.sh",
    "emailme": "node scripts/quick-email.js",
    "message-claude": "./scripts/claude-messenger.sh",
    "test-models": "./scripts/multi-model-test.sh",
    "generate": "./scripts/template-generator.sh",
    "validate": "node scripts/validate-config.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "shellcheck scripts/*.sh hooks/* 2>/dev/null || echo 'shellcheck not installed - skipping'",
    "typecheck": "tsc --noEmit",
    "setup-hooks": "ln -sf ../../hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "doctor": "node scripts/doctor.js",
    "health": "npm run doctor",
    "fix-permissions": "chmod +x scripts/*.sh hooks/*",
    "update-all": "npm run sync && npm run validate && npm run doctor",
    "backup": "./scripts/backup-preferences.sh",
    "restore": "./scripts/backup-preferences.sh restore",
    "auto-update": "./scripts/auto-update.sh",
    "env": "./scripts/environment-manager.sh",
    "env-create": "./scripts/environment-manager.sh create",
    "env-switch": "./scripts/environment-manager.sh switch",
    "env-list": "./scripts/environment-manager.sh list",
    "wizard": "./scripts/preferences-wizard.sh",
    "quick-setup": "./scripts/quick-setup.sh",
    "integrations": "./scripts/integration-helper.sh",
    "performance": "node ./scripts/performance-monitor.js",
    "analytics": "./scripts/usage-analytics.sh",
    "optimize": "./scripts/optimization-engine.sh",
    "benchmark": "./scripts/optimization-engine.sh benchmark",
    "analyze": "./scripts/optimization-engine.sh analyze",
    "learn": "node /Users/shakeelbhamani/.claude/commands/learn.js 1",
    "learn:cycles": "node /Users/shakeelbhamani/.claude/commands/learn.js",
    "improve": "node /Users/shakeelbhamani/.claude/commands/improve.js 1",
    "improve:cycles": "node /Users/shakeelbhamani/.claude/commands/improve.js",
    "sub-agents": "npm run validate-sub-agents",
    "validate-sub-agents": "node scripts/validate-sub-agents.js",
    "manage": "npm run dev",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build-ui": "npm run build",
    "serve-ui": "npm run start"
  },
  "keywords": [
    "claude-code",
    "preferences",
    "configuration",
    "ai",
    "development",
    "automation",
    "screenshots",
    "monitoring"
  ],
  "author": "Shakeel Bhamani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/shaktech786/claude-code-preferences.git"
  },
  "bugs": {
    "url": "https://github.com/shaktech786/claude-code-preferences/issues"
  },
  "homepage": "https://github.com/shaktech786/claude-code-preferences#readme",
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.2",
    "marked": "^15.0.5",
    "next": "^15.5.3",
    "nodemailer": "^7.0.5",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "files": [
    "CLAUDE.md",
    "configs/",
    "scripts/",
    "templates/",
    "hooks/",
    "install.sh",
    "README.md"
  ],
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^5.0.3",
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4"
  }
}
